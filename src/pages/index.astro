---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Icon from 'astro-icon'

const img =
	'https://images.unsplash.com/photo-1681405203174-240c946cf06e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1632&q=80'
---

<Layout title="Masonry Dashboard">
	<div
		class="parent w-full flex xl:flex-row justify-center items-center gap-6 xl:h-[95dvh] flex-col-reverse px-6 mt-5"
	>
		<div
			class="left flex flex-col justify-center items-center xl:w-[49%] w-full gap-2 h-full"
		>
			<div
				class="top h-[35%] bg-blue-600 rounded-[2rem] w-full p-6 flex flex-col justify-end"
			>
				<div
					class="flex items-center justify-center gap-2 px-4 py-2 mb-1 rounded-full tag bg-slate-50 w-max"
				>
					<Icon pack="mdi" name="star" class="w-4" />
					Machine Statistics
				</div>
				<div class="wrapper rounded-full border border-white p-[2px]">
					<div
						class="p-2 px-4 font-bold text-white border-white rounded-full inner bg-slate-50/60 text-l"
					>
						<p class="mt-[-2px]">Simulation energy position</p>
					</div>
				</div>
			</div>
			<div
				class="bottom p-7 h-[65%] rounded-[2rem] w-full bg-slate-50 flex flex-col justify-between"
			>
				<div class="mt-[-1.5rem]">
					<p class="heading text-[4rem] font-semibold">Innovation</p>
					<div
						class="p-1 px-10 text-white uppercase bg-black rounded-full tag w-max"
					>
						Statistics
					</div>
				</div>
				<div class="w-full loaders">
					<div class="w-full mb-1 bg-gray-300 rounded-full bar">
						<div class="filled bg-black h-10 w-[60%] rounded-full">.</div>
					</div>
					<div class="w-full bg-gray-300 rounded-full bar">
						<div
							class="filled bg-black w-[90%] h-10 rounded-full text-white flex justify-end items-center pr-4"
						>
							+30%
						</div>
					</div>
				</div>
				<div class="text-2xl font-bold">
					<p>
						<span class="underline">Software</span>
						<span class="">with</span><span class="text-gray-400">
							future design</span
						> technology
					</p>
					<p>
						<span class="text-gray-400">boundless</span> innovation and experience.
					</p>
				</div>
				<div class="cta">
					<div class="flex items-center justify-center gap-1">
						<div class="flex-1 p-4 border-2 border-black rounded-3xl">
							<div
								class="flex items-center justify-between pt-12 border-b-2 border-b-black"
							>
								<p>Get Started</p>
								<Icon pack="ic" name="round-north-east" class="w-4" />
							</div>
						</div>
						<div class="flex-1 p-4 border-2 border-black rounded-3xl">
							<div
								class="flex items-center justify-between pt-12 border-b-2 border-b-black"
							>
								<p>Pricing</p>
								<Icon pack="ic" name="round-north-east" class="w-4" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div
			class="right gap-4 rounded-[2rem] text-white flex xl:flex-col flex-col items-center xl:justify-center xl:w-[49%] xl:h-full"
		>
			<div
				class="top xl:h-[35%] flex items-center justify-between flex-col w-full"
			>
				<div class="nav flex items-center justify-center w-full">
					<div class="p-[2px] border flex-1 border-white rounded-full">
						<div
							class="flex items-center justify-between p-1 px-2 border border-white rounded-full bg-slate-50/20"
						>
							<p>Navigation menu</p>
							<Icon pack="ic" name="round-north-east" class="w-4" />
						</div>
					</div>
					<a href="placeholderforprotfoliolink.com" target="_blank">
						<div class="p-[11px] border border-white rounded-full">
							<Icon pack="mdi" name="code-braces" class="w-4" />
						</div>
					</a>
					<a href="https://github.com/SaM13997" target="_blank">
						<div class="p-[11px] border border-white rounded-full">
							<Icon pack="mdi" name="github" class="w-4" />
						</div>
					</a>
					<a href="https://www.linkedin.com/in/sarthak13997/" target="_blank">
						<div class="p-[11px] border border-white rounded-full">
							<Icon pack="mdi" name="linkedin" class="w-4" />
						</div>
					</a>
				</div>
				<div class="border-b-2 order-last border-white w-[97%]">
					Future Design
				</div>
				<div
					class="dashboard w-[97%] flex items-start xl:items-center justify-between flex-col-reverse xl:flex-row pt-6"
				>
					<p class="xl:text-[4rem] text-[2.5rem] font-semibold">Dashboard</p>
					<div class="flex gap-1">
						<div
							class="flex items-center justify-center bg-blue-500 rounded-full xl:w-14 xl:h-14 w-10 h-10"
						>
							<img
								src="https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=761&q=80"
								alt="avatar"
								class="object-cover rounded-full xl:w-14 xl:h-14 w-10 h-10"
							/>
						</div>
						<div
							class="flex items-center justify-center bg-blue-500 rounded-full xl:w-14 xl:h-14 w-10 h-10"
						>
							<Icon pack="mdi" name="video" class="w-6" />
						</div>
					</div>
				</div>
			</div>
			<div
				class="bottom xl:h-[65%] flex flex-col justify-center items-center gap-2"
			>
				<div
					class="h-[50%] w-full flex justify-center items-center flex-col xl:flex-row gap-1"
				>
					<Card
						title="membership"
						subtext="Online Users Availability"
						number="435"
						bgColor="#0D74F5"
						percent="33%"
						white={true}
					/>
					<Card
						title="Database"
						subtext="Storage Disk Database"
						number="62%"
						bgColor="#F5E230"
						percent="66%"
						white={false}
					/>
				</div>
				<div
					class="xl:h-[50%] w-full flex flex-col justify-center items-center gap-4 p-2 pb-4 border border-white rounded-[2rem]"
				>
					<div
						class="rounded-[2rem] flex-1 flex justify-between items-start pt-4 px-4 bg-cover w-full py-[80px] bg-[url(https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)]"
					>
						<div
							class="px-6 font-bold text-white uppercase rounded-full bg-slate-950 tag w-max"
						>
							Statistics
						</div>
						<Icon pack="ic" name="round-north-east" class="w-6 text-black" />
					</div>
					<div class="flex flex-col w-full gap-4 p-2">
						<div class="flex items-center justify-between flex-1">
							<p>New methods design development</p>
							<p>12+</p>
						</div>
						<span class="w-full h-[1px] bg-white"></span>
						<p class="text-gray-400">
							Experience what the modern web and your <span
								class="underline text-slate-50">next project</span
							> could look like, your brand and values, our aesthetics.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<style lang="scss">
		.left .top {
			background: url('https://images.unsplash.com/photo-1680810094604-cd68532ebc56?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1632&q=80')
				no-repeat center center;
			background-size: cover;
		}

		.parent {
			outline: red solid 2px;
		}

		@media only screen and (max-width: 640px) {
			.parent {
				// display: block !important;
				outline: blue solid 2px;
			}
		}
	</style>
</Layout>
