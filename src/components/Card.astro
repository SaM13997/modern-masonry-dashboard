---
import { Icon } from 'astro-icon'

const { title, bgColor, subtext, number, percent, white } = Astro.props
---

<div
	class="rounded-[2rem] w-full h-full flex flex-col justify-between items-center gap-4 bgColor px-4 py-6"
>
	<div class="flex items-center justify-between w-full">
		<div
			class="px-8 font-bold uppercase rounded-full tag w-max"
			style={{
				color: white ? 'black' : 'white',
				backgroundColor: white ? 'white' : 'black',
			}}
		>
			<p>{title}</p>
		</div>
		<Icon
			pack="ic"
			name="round-north-east"
			class="w-6"
			style={{
				color: white ? 'white' : 'black',
			}}
		/>
	</div>
	<div class="flex flex-col items-center justify-center w-full">
		<div class="flex items-center justify-between w-full pb-1">
			<div
				class="w-[70%]"
				style={{
					color: white ? 'white' : 'black',
				}}
			>
				<p class="xl:text-[1.4rem ] text-xl font-semibold">{subtext}</p>
			</div>
			<div
				class="w-[30%]"
				style={{
					color: white ? 'white' : 'black',
				}}
			>
				<p class="xl:text-2rem text-2xl text-right">{number}</p>
			</div>
		</div>
		<div
			class="w-full mb-1 rounded-full"
			style={{
				backgroundColor: white ? 'rgb(209 213 219 / 0.5)' : 'rgb(3 7 18 / 0.2)',
			}}
		>
			<div
				class="h-4 rounded-full filled loaderSize"
				style={{
					backgroundColor: white ? 'white' : 'black',
				}}
			>
			</div>
		</div>
	</div>
</div>

<style lang="scss" define:vars={{ bgColor, percent, white }}>
	.bgColor {
		background-color: var(--bgColor);
	}
	.loaderSize {
		width: var(--percent);
	}
</style>
